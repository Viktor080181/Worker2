<Window x:Class="YourNamespace.AddWorkerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить работника" Height="300" Width="400">
    <Grid>
        <Grid>
            <DataGrid x:Name="WorkersDataGrid" AutoGenerateColumns="True" />
            <Button Content="Добавить работника" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Click="AddWorkerButton_Click" />
        </Grid>
        <StackPanel Margin="10">
            <Label Content="ФИО:" />
            <TextBox x:Name="FullNameTextBox" />
            <Label Content="Должность:" />
            <TextBox x:Name="PositionTextBox" />
            <Label Content="Заработная плата:" />
            <TextBox x:Name="SalaryTextBox" />
            <Label Content="Пол:" />
            <TextBox x:Name="GenderTextBox" />
            <Label Content="Возраст:" />
            <TextBox x:Name="AgeTextBox" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Ок" Click="OkButton_Click" Margin="5" />
                <Button Content="Отмена" Click="CancelButton_Click" Margin="5" />
            </StackPanel>
            
        </StackPanel>
        
    </Grid>
</Window>